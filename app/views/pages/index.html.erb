<%= content_for :top do %>
    <%= title 'Índice' %>
    <%= button_group do %>
        <%= add_button_link_to 'Añadir página', [:new, project, :page] if can? :manage, project %>
    <% end %>
<% end %>

<table>
  <%= render pages %>
</table>
<%= content_tag(:p, t('.empty_pages')) if pages.size == 0 %>

<%= content_for :info do %>
    <div class="booka-box">
      <%= link_to 'Poner en modo lectura', project_read_pages_path(project) %>
    </div>
    <div class="booka-box">
      <%= link_to 'Descargar PDF del libro', project_read_pages_path(project, :format => :pdf) %>
    </div>
<% end %>
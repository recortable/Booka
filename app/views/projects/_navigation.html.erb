<ul class="navigator">
  <li><%= link_to_unless_current t('projects.navigation.intro'), [project] %></li>
  <span>|</span>
  <% if project.has_stage? :contents %>
      <li><%= link_to_unless controller.class  == ContentsController, t('.contents'), [project, :contents] %></li>
      <span>|</span>
  <% end %>
  <% if project.has_stage? :topics %>
      <li><%= link_to_unless_current t('projects.navigation.topics'), [project, :topics] %></li>
      <span>|</span>
  <% end %>
  <% if project.has_stage? :pages %>
      <li><%= link_to_unless_current t('projects.navigation.pages'), [project, :pages] %></li>
      <span>|</span>
  <% end %>
  <li><%= link_to_unless_current t('projects.navigation.users'), [project, :permissions] %></li>
  <span>|</span>
</ul>

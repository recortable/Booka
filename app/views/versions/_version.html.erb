<%= div_for version do %>
    <% user = User.find(version.user_id) %>
    <% project = Project.find(version.project_id) %>

    <% if version.item_type == 'Project' %>
        <%= link_to project.title, project, :class => 'project' unless @hide_project_version %>
        <div class="info user"><%= avatar_img user %><%= user.name %> hace <%= time_ago_in_words version.created_at %></div>
        <div class="info model"><strong>ha <%= t("versions.version.#{version.event}") %></strong>
          <%= link_to 'el booka', version %></div>
    <% elsif version.item_type == 'Permission' %>
        <% modifier = User.find(version.title) %>
        <%= link_to project.title, project, :class => 'project' unless @hide_project_version %>
        <div class="info user"><%= avatar_img user %><%= user.name %> hace <%= time_ago_in_words version.created_at %></div>
        <div class="info model"><strong>ha a√±adido a</strong> '<%= user.name %>'</div>
    <% else %>
        <%= link_to project.title, project, :class => 'project' unless @hide_project_version %>
        <div class="info user"><%= avatar_img user %><%= user.name %> hace <%= time_ago_in_words version.created_at %></div>
        <% type = version.sub_type.present? ? version.sub_type : version.item_type %>
        <div class="info model">ha <strong><%= t("versions.version.model.#{type}.#{version.event}") %></strong>
          '<%= link_to version.title, version %>'</div>
    <% end %>
<% end %>
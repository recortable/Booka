<%= content_for :top do %>
    <%= title t('.title') %>
<% end %>

<%= simple_form_for([content.project, content]) do |form| %>
    <%= form.input :title %>
    <%= form.input :body %>
    <%= button_submit_tag 'Guardar' %>
    <%= link_to 'Cancelar', (content.new_record? ? [content.project, :contents] : [content.project, content]) %>
<% end %>